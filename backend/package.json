{
  "name": "babalola-legal-backend",
  "version": "1.0.0",
  "description": "Babalola Legal OS - Law Firm Management Platform Backend API",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "dev": "nodemon --legacy-watch src/index.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\"",
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "db:seed": "knex seed:run",
    "db:reset": "npm run db:rollback && npm run db:migrate && npm run db:seed",
    "docker:build": "docker build -t babalola-legal-backend .",
    "docker:build:prod": "docker build --target production -t babalola-legal-backend:prod .",
    "docker:run": "docker run -p 3001:3001 babalola-legal-backend",
    "docker:run:prod": "docker run -p 3001:3001 babalola-legal-backend:prod",
    "docker:compose:up": "docker-compose up -d backend",
    "docker:compose:down": "docker-compose down",
    "docker:compose:logs": "docker-compose logs -f backend",
    "docker:clean": "docker system prune -f && docker volume prune -f"
  },
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "compression": "^1.7.4",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "express-validator": "^7.0.1",
    "express-rate-limit": "^7.1.5",
    "knex": "^3.0.1",
    "pg": "^8.11.3",
    "redis": "^4.6.10",
    "ioredis": "^5.3.2",
    "multer": "^1.4.5-lts.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "nodemailer": "^6.9.7",
    "dayjs": "^1.11.10",
    "lodash": "^4.17.21",
    "express-async-handler": "^1.2.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3",
    "eslint": "^8.53.0",
    "prettier": "^3.1.0",
    "@types/node": "^20.9.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "keywords": [
    "legal",
    "law-firm",
    "case-management",
    "api",
    "nodejs"
  ],
  "author": "Babalola Legal OS Team",
  "license": "MIT"
}
